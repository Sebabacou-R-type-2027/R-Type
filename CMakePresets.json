{
    "version": 9,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 30,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "binaryDir": "${sourceDir}/build",
            "generator": "Ninja Multi-Config",
            "environment": {
                "VCPKG_ROOT": "${sourceDir}/vcpkg"
            },
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_EXPERIMENTAL_CXX_IMPORT_STD": "0e5b6991-d74f-4b3d-a41c-cf096e0b2508",
                "CMAKE_EXPERIMENTAL_EXPORT_PACKAGE_DEPENDENCIES": "1942b4fa-b2c5-4546-9385-83f254070067",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_COLOR_DIAGNOSTICS": "ON"
            }
        },
        {
            "name": "llvm",
            "inherits": "base",
            "environment": {
                "CC": "clang",
                "CXX": "clang++",
                "CXXFLAGS": "$penv{CXXFLAGS} -stdlib=libc++"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "base",
            "configuration": "Debug"
        },
        {
            "name": "llvm",
            "inherits": "default",
            "configurePreset": "llvm"
        },
        {
            "name": "release",
            "configurePreset": "base",
            "configuration": "Release"
        },
        {
            "name": "release-llvm",
            "inherits": "release",
            "configurePreset": "llvm"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "base",
            "configuration": "Debug",
            "output": {
                "shortProgress": true,
                "outputOnFailure": true,
                "verbosity": "verbose"
            }
        },
        {
            "name": "llvm",
            "inherits": "default",
            "configurePreset": "llvm"
        },
        {
            "name": "release",
            "configurePreset": "base",
            "configuration": "Release",
            "output": {
                "shortProgress": false,
                "outputOnFailure": false,
                "verbosity": "default"
            }
        },
        {
            "name": "release-llvm",
            "inherits": "release",
            "configurePreset": "llvm"
        }
    ],
    "packagePresets": [
        {
            "name": "base",
            "configurePreset": "base",
            "packageName": "R-Type"
        },
        {
            "name": "default",
            "inherits": "base",
            "configurations": [
                "Debug"
            ],
            "output": {
                "verbose": true
            }
        },
        {
            "name": "llvm",
            "inherits": "default",
            "configurePreset": "llvm"
        },
        {
            "name": "release",
            "inherits": "base",
            "configurations": [
                "Release"
            ],
            "output": {
                "verbose": false
            }
        },
        {
            "name": "release-llvm",
            "inherits": "release",
            "configurePreset": "llvm"
        }
    ],
    "workflowPresets": [
        {
            "name": "default",
            "steps": [
                {
                    "type": "configure",
                    "name": "base"
                },
                {
                    "type": "build",
                    "name": "default"
                },
                {
                    "type": "test",
                    "name": "default"
                },
                {
                    "type": "package",
                    "name": "default"
                }
            ]
        },
        {
            "name": "default-llvm",
            "steps": [
                {
                    "type": "configure",
                    "name": "llvm"
                },
                {
                    "type": "build",
                    "name": "llvm"
                },
                {
                    "type": "test",
                    "name": "llvm"
                },
                {
                    "type": "package",
                    "name": "llvm"
                }
            ]
        },
        {
            "name": "release",
            "steps": [
                {
                    "type": "configure",
                    "name": "base"
                },
                {
                    "type": "build",
                    "name": "release"
                },
                {
                    "type": "test",
                    "name": "release"
                },
                {
                    "type": "package",
                    "name": "release"
                }
            ]
        },
        {
            "name": "release-llvm",
            "steps": [
                {
                    "type": "configure",
                    "name": "llvm"
                },
                {
                    "type": "build",
                    "name": "release-llvm"
                },
                {
                    "type": "test",
                    "name": "release-llvm"
                },
                {
                    "type": "package",
                    "name": "release-llvm"
                }
            ]
        }
    ]
}
